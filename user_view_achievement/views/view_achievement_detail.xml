<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="view_achievement_detail" model="ir.ui.view">
        <field name="name">achievement.detail.form</field>
        <field name="model">create_achievement.achievement</field>
        <field name="arch" type="xml">
          <form>
            <sheet classname="container">
              <field name="name_title" style="font-size: 24px; font-weight: 700; text-transform: uppercase; border-bottom: 1px solid #ced4da ; margin-bottom: 32px; color: #495057 ;" readonly='1' />
              <group> 
                <group>
                  <field name="name" placeholder="Tên danh hiệu"/>
                  <field name="description"/>
                </group>
                <group>
                  <field name="start_at"/>
                  <field name="end_at"/>
                  <field name="end_submit_at"/>
                </group> 
              </group>
              <field name="criteria_ids"/>
            </sheet>
          </form>
        </field>
  </record>
  
  <record id="action_view_achievement_detail" model="ir.actions.act_window">
    <field name="name">Quản lý Danh hiệu/Giải Thưởng</field>
    <field name='type'>ir.actions.act_window</field>
    <field name="res_model">create_achievement.achievement</field>
    <field name="view_mode">form</field>
  </record>
</odoo>
