<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="manage_user_depart.list_depart">
      <field name="name">manage_user_depart list</field>
      <field name="model">manage_user_depart.department</field>
      <field name="arch" type="xml">
        <tree>
          <!-- <field name="id"/> -->
          <field name="code" string="Mã số đơn vị"/>
          <field name="name" string="Tên đơn vị"/>
          <field name="user_count" string="Số lượng thành viên" readonly="1"/>
          <!-- <field name= -->
          <!-- <field name="updateAt"/>
          <field name="deleteAt"/> -->

        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="manage_user_depart.form_depart"> 
      <field name="name">manage_user_depart form0</field>
      <field name="model">manage_user_depart.department</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group string="Chi tiết đơn vị" style="font-size:25px">
            <field name="code" string="Mã số đơn vị" required="1"/>
            <field name="name" string="Tên đơn vị" required="1"/>
            <field name="user_count" string="Số lượng thành viên" readonly="1"/>

            </group>

          </sheet>

        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="manage_user_depart.action_window_depart">
      <field name="name">Danh sách đơn vị</field>
      <field name="res_model">manage_user_depart.department</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->



    <!-- Top menu item -->

    <menuitem name="Quản lý đơn vị" id="manage_user_depart.depart_root" action="manage_user_depart.action_window_depart" web_icon="code_backend_theme,static/src/img/icons/Employees.png"/>

  </data>
</odoo>