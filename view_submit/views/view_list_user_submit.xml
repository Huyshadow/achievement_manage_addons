<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_achievement_user_list" model="ir.ui.view">
		<field name="name">achievement.user.list.view</field>
		<field name="model">achievement.user.list</field>
		<field name="arch" type="xml">
			<tree create="false" export_xlsx="false" delete='true' edit="false" limit="20" js_class="disappear_check_box">
				<field name="user_name"/>
				<field name="donvi_name"/>
				<field name="submit_at" widget="date" string="Ngày nộp"/>
				<!-- <field name="approve"/> -->
				<button name="action_view_user_submit" type="object" class="btn btn-primary" string="Xem chi tiết"/>
				<field name="user_approve" string="Duyệt hồ sơ" widget="boolean_toggle" groups = "access_right_user.group_unit_manager"/>
				<!-- <button name="action_accept_submit" type="object" class="btn btn-primary" string="Duyệt" 
					groups="access_right_user.group_comittee"/> -->
			</tree>
		</field>
	</record>
</odoo>