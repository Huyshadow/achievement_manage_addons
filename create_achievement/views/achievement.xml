<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="view_cr_achievement_form" model="ir.ui.view">
        <field name="name">create.achievement.form</field>
        <field name="model">create_achievement.achievement</field>
        <field name="arch" type="xml">
           <form string="Tạo danh hiệu">
            <sheet classname="container">
              <div style="width:100%; margin-bottom: 32px; border-bottom: black 1px solid;">
                <h1>Tạo Danh hiệu</h1>
              </div>
              <group>
                <group>
                  <field name="name" placeholder="Achievement's Name"/>
                  <field name="description"/>
                </group>
                <group>
                  <field name="start_at"/>
                  <field name="end_at"/>
                  <field name="end_submit_at"/>
                </group>
              </group>  
              <div style="width:100%; display: flex; justify-content:center;">
              <button name="link_to_criteria" string="Thêm Tiêu chí" type="object" class="btn-primary"/>
              </div>
            </sheet>
           </form>
        </field>
  </record>

  <record id="view_cr_achievement_tree" model="ir.ui.view">
        <field name="name">create.achievement.tree</field>
        <field name="model">create_achievement.achievement</field>
        <field name="arch" type="xml">
           <tree>
                <field name="name"/>
                <field name="start_at"/>
                <field name="end_at"/>
                <field name="end_submit_at"/>
                <field name="status"/>
                <field name="criteria_ids" invisible='1' />
                <!-- <field name="last_updated_time" widget="datetime"/> -->
           </tree>
        </field>
  </record> 
  
  <record id="action_cr_achievement" model="ir.actions.act_window">
    <field name="name">Quản lý Danh hiệu/Giải Thưởng</field>
    <field name='type'>ir.actions.act_window</field>
    <field name="res_model">create_achievement.achievement</field>
    <field name="view_mode">tree,form</field>
  </record>
  
</odoo>