<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="view_cr_achievement_form" model="ir.ui.view">
        <field name="name">create.achievement.form</field>
        <field name="model">create_achievement.achievement</field>
        <field name="arch" type="xml">
           <form>
            <sheet classname="container">
              <field name="name_title" style="font-size: 24px; font-weight: 700; text-transform: uppercase; border-bottom: 1px solid #ced4da ; margin-bottom: 32px; color: #495057 ;" readonly='1' />
              <field name="status" invisible='1'/>
              <group> 
                <group>
                  <field name="name" placeholder="Tên danh hiệu" attrs="{'readonly': [('status', '=', 'Đang tiến hành')]}"/>
                  <field name="description" attrs="{'readonly': [('status', '=', 'Đang tiến hành')]}"/>
                </group>
                <group>
                  <field name="start_at" widget="date" options="{'datepicker-options': {'dateFormat': 'dd/mm/y'}}" attrs="{'readonly': [('status', '=', 'Đang tiến hành')]}"/>
                  <field name="end_submit_at" widget="date" options="{'datepicker-options': {'dateFormat': 'dd/mm/y'}}" attrs="{'readonly': [('status', '=', 'Đang tiến hành')]}"/>
                  <field name="end_at" widget="date" options="{'datepicker-options': {'dateFormat': 'dd/mm/y'}}" attrs="{'readonly': [('status', '=', 'Đang tiến hành')]}"/>
                </group>
              </group>
              <group string="Danh sách tiêu chí" style="font-size: 25px">
              </group>  
              <field attrs="{'readonly': [('status', '=', 'Đang tiến hành')]}" name="criteria_ids"/>
             </sheet>
           </form>
        </field>
  </record>

  <record id="view_cr_achievement_tree" model="ir.ui.view">
        <field name="name">create.achievement.tree</field>
        <field name="model">create_achievement.achievement</field>
        <field name="arch" type="xml">
           <tree limit="20">
                <field name="name"/>
                <field name="start_at"/>
                <field name="end_submit_at"/>
                <field name="end_at"/>
                <field name="status"
                  decoration-success="status == 'Đang tiến hành'"
                  decoration-warning="status == 'Trạng thái chờ'"
                  decoration-danger="status == 'Đã kết thúc'"
                  widget="badge"/>
                <field name="criteria_ids" invisible='1' />
                <!-- <field name="last_updated_time" widget="datetime"/> -->
           </tree>
        </field>
  </record> 
  
  <record id="action_cr_achievement" model="ir.actions.act_window">
    <field name="name">Quản lý Danh hiệu/Giải Thưởng</field>
    <field name='type'>ir.actions.act_window</field>
    <field name="res_model">create_achievement.achievement</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
          <p>
              <b>Hiện tại chưa có Danh hiệu nào</b>
          </p><p>
              Mời tạo danh hiệu
          </p>
    </field>
  </record>
  
</odoo>