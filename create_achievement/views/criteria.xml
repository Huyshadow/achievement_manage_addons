<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_cr_criteria_form" model="ir.ui.view">
        <field name="name">create.criteria.form</field>
        <field name="model">create_achievement.criteria</field>
        <field name="arch" type="xml">
           <form>
            <sheet>
              <group>
                <field name="type"/>
                <field name="name"/>
                <field name="method"/>s
                <field name="evidence"/>
                <field name="sign" attrs="{'invisible': [('method', '!=', 'thang điểm')]}"/>
                <field name="left_goal" attrs="{'invisible': ['|',('sign', '!=', 'a'), ('sign', '!=', 'b'), ('sign', '!=', '&lt;='), ('sign', '!=', '&gt;=')]}" />
                <field name="value_list_string" attrs="{'invisible': [('method', '!=', 'dạng danh sách')]}"/>
                <field name="note"/>
                <field name="content"/>
              </group>
            </sheet>
           </form>
        </field>
     </record>
     <record id="view_cr_criteria_tree" model="ir.ui.view">
        <field name="name">create.criteria.tree</field>
        <field name="model">create_achievement.criteria</field>
        <field name="arch" type="xml">
           <tree>
                <field name="name"/>
                <field name="method"/>
                <field name="content"/>
           </tree>
        </field>
     </record>
     

    <record id="action_cr_criteria" model="ir.actions.act_window">
        <field name="name">Criterias</field>
        <field name='type'>ir.actions.act_window</field>
        <field name="res_model">create_achievement.criteria</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem 
        id="menu_cr_ach_criteria" 
        name="Criteria"
        parent="menu_cr_ach_achievement"
        action="action_cr_criteria"
        sequence="10"
    />
</odoo>