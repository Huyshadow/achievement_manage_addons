<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_cr_group_criteria_form" model="ir.ui.view">
        <field name="name">create.group.groups_criterias.form</field>
        <field name="model">create_achievement.group_criterias</field>
        <field name="arch" type="xml">
           <form>
            <sheet>
               <group>
                  <field name="name"/>
               </group>
               <notebook style="width:1024px, height: 512px"> 
                  <page name="constraint" string="Tiêu chí bắt buộc" >
                     <group>
                        <field name="constrait_criterias" />
                     </group>
                  </page>
                  <page name="option" string="Tiêu chí tự chọn">
                     <group>
                        <field name="option_criterias" />
                        <field name="option_constraint" />
                     </group>
                  </page>
               </notebook>
            <!-- <field name="self_one2many_id" attrs="{'invisible': [('type', '!=', 'tập tiêu chí')]}"/> -->
            </sheet>
           </form>
        </field>
     </record>
     <record id="view_cr_group_criteria_tree" model="ir.ui.view">
        <field name="name">create.group.groups_criterias.tree</field>
        <field name="model">create_achievement.group_criterias</field>
        <field name="arch" type="xml">
           <tree>
                <field name="name"/>
                <field name="constrait_criterias" widget="many2many_tags"/>
                <field name="option_criterias"  widget="many2many_tags"/>
           </tree>
        </field>
     </record>
     

    <record id="action_cr_group_criteria" model="ir.actions.act_window">
        <field name="name">Danh sách tập tiêu chí</field>
        <field name='type'>ir.actions.act_window</field>
        <field name="res_model">create_achievement.group_criterias</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>