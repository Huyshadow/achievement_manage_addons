<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="achievement_management.list_user">
      <field name="name">achievement_management list</field>
      <field name="model">database_manage.user</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="mssv"/>
          <field name="email"/>
          <field name="role"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="achievement_management.action_window_user">
      <field name="name">User management window</field>
      <field name="res_model">database_manage.user</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="achievement_management.action_server_user">
      <field name="name">achievement_management user</field>
      <field name="model_id" ref="model_database_manage_user"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="User Manage" id="achievement_management.user_root" action="achievement_management.action_window_user" web_icon="code_backend_theme,static/src/img/icons/Contacts.png"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="achievement_management.user_1" parent="achievement_management.user_root" action="achievement_management.action_window_user"/>
    <menuitem name="Menu 2" id="achievement_management.user_2" parent="achievement_management.user_root" action="achievement_management.action_server_user"/>

    <!-- actions -->

    <!-- <menuitem name="List" id="achievement_management.user_1_list" parent="achievement_management.user_1"
              action="achievement_management.action_window_user"/>
    <menuitem name="Server to list" id="achievement_management.menu_2_server" parent="achievement_management.user_2"
              action="achievement_management.action_server_user"/> -->

  </data>
</odoo>