<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="achievement_management.list_depart">
      <field name="name">achievement_management list</field>
      <field name="model">database_manage.department</field>
      <field name="arch" type="xml">
        <tree>
          <!-- <field name="id"/> -->
          <field name="code"/>
          <field name="name"/>
          <field name="updateAt"/>
          <field name="deleteAt"/>

        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="achievement_management.action_window_depart">
      <field name="name">Department management window</field>
      <field name="res_model">database_manage.department</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="achievement_management.action_server_depart">
      <field name="name">achievement_management Department</field>
      <field name="model_id" ref="model_database_manage_department"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Department Manage" id="achievement_management.depart_root" action="achievement_management.action_window_depart" web_icon="code_backend_theme,static/src/img/icons/Employees.png"/>

    <!-- menu categories -->

    <!-- <menuitem name="Menu 1" id="achievement_management.depart_1" parent="achievement_management.depart_root"/>
    <menuitem name="Menu 2" id="achievement_management.depart_2" parent="achievement_management.depart_root"/> -->

    <!-- actions -->

    <!-- <menuitem name="List" id="achievement_management.depart_1_list" parent="achievement_management.depart_1"
              action="achievement_management.action_window_depart"/>
    <menuitem name="Server to list" id="achievement_management.depart_2_server" parent="achievement_management.depart_2"
              action="achievement_management.action_server_depart"/> -->

  </data>
</odoo>