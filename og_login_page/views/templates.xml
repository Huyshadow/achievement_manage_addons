<odoo>
  <template id="custom_login" name="Custom Login" inherit_id="web.login">
    <xpath expr="//form[@class='oe_login_form']" position="replace">            
            <form class="oe_login_form py-md-2 px-3 px-sm-4 px-lg-5 glassy-card " role="form" t-attf-action="/web/login" method="post" onsubmit="this.action = '/web/login' + location.hash">
              <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
              <div class="text-center">
                <div>
                  <h1 class="my-3">Sign In</h1>
                </div>
                <!-- <img class="my-4" src="/og_login_page/static/src/img/logoo.png" style="width: 300px;" alt="logo"/> -->
              </div>
              <div class="mb-3 mx-5" t-if="databases and len(databases) &gt; 1">
                <label for="db" class="col-form-label">Database</label>
                <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                  <input type="text" name="db" t-att-value="request.db" id="db" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" readonly="readonly"/>
                  <a role="button" href="/web/database/selector" class="btn btn-primary">Select <i class="fa fa-database" role="img" aria-label="Database" title="Database"></i>
                  </a>
                </div>
              </div>
             <div class="mb-3 icon-container">
                <i class="fa fa-user" aria-hidden="true"></i>
                <input class="text-center form-control" type="text" placeholder="Email or Username" name="login" id="login" required="required" autofocus="autofocus" autocapitalize="off"/>
              </div>
              <div class="mb-3 icon-container">
                <i class="fa fa-lock" aria-hidden="true"></i>
                <input class="text-center form-control" type="password" placeholder="********" name="password" id="password" required="required" autocomplete="current-password" maxlength="4096"/>
              </div>
              <p class="alert alert-danger" t-if="error" role="alert">
                <t t-esc="error"/>
              </p>
              <p class="alert alert-success" t-if="message" role="status">
                <t t-esc="message"/>
              </p>

              <div t-attf-class="clearfix oe_login_buttons text-center gap-1 d-grid mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                <button type="submit" class="btn btn-outline-light  px-5 py-1" style="min-width: 100%">Sign In</button>
                <t t-if="debug">
                  <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm">Log in as superuser</button>
                </t>
                <div class="o_login_auth"/>
              </div>
              <a class="small text-muted" href="/web/reset_password">Forgot password?</a>
              <p class="mb-1 pb-lg-2 text-white">Don't have an account? <a href="/web/signup" class="text-primary">Register here</a>
              </p>
              <input type="hidden" name="redirect" t-att-value="redirect"/>
            </form>
    </xpath>
  </template>
<!-- Sign Up -->
  <template id="custom_signup" name="Custom Sign Up" inherit_id="auth_signup.signup">
    <xpath expr="//form[@class='oe_signup_form']" position="replace">
     <form class="oe_signup_form px-3 px-sm-4 px-lg-5 glassy-card" role="form" method="post" t-if="not message">
        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
        <div class="text-center">
            <h1 class="my-3">Sign Up</h1>
          <!-- <img class="mb-2" src="/og_login_page/static/src/img/logoo.png" style="width: 300px;" alt="logo"/> -->
        </div>
        <t t-call="auth_signup.fields">
          <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
        </t>
        <p class="alert alert-danger" t-if="error" role="alert">
          <t t-esc="error"/>
        </p>
        <input type="hidden" name="redirect" t-att-value="redirect"/>
        <input type="hidden" name="token" t-att-value="token"/>
        <div class="text-center oe_login_buttons d-grid pt-3">
          <button type="submit" class="btn btn-outline-light"> Sign up</button>
          <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm my-1" role="button">Already have an account?</a>
          <div class="o_login_auth"/>
        </div>
      </form>
    </xpath>
  </template>

  <template id="custom_reset_password" name="Custom Reset Password" inherit_id="auth_signup.reset_password">
    <xpath expr="//form[@class='oe_reset_password_form']" position="replace">
        <div t-if="message" >
          <p class="alert alert-success" t-if="message" role="status">
            <t t-esc="message"/>
          </p>
            <a href="/web/login" class="btn btn-link btn-sm text-center" role="button">Back to Login</a>
        </div>

        <form class="oe_reset_password_form py-md-2 px-3 px-sm-4 px-lg-5 glassy-card" role="form" method="post" t-if="not message">
          <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

          <t t-if="token and not invalid_token">
            <t t-call="auth_signup.fields">
              <t t-set="only_passwords" t-value="1"/>
            </t>
          </t>
          <div class="text-center">
            <h1 class="my-3">Reset Password</h1>
        </div>
          <t t-if="not token">
            <div class="mb-3 field-login">
              <label for="login" class="col-form-label">Your Email</label>
              <input type="text" name="login" t-att-value="login" id="login" class="form-control" autofocus="autofocus" required="required" autocapitalize="off"/>
            </div>
          </t>

          <p class="alert alert-danger" t-if="error" role="alert">
            <t t-esc="error"/>
          </p>
          <input type="hidden" name="redirect" t-att-value="redirect"/>
          <input type="hidden" name="token" t-att-value="token"/>
          <div class="clearfix oe_login_buttons d-grid mt-3">
            <button type="submit" class="btn btn-outline-light">Reset Password</button>
            <div class="d-flex justify-content-between align-items-center small mt-2">
              <a c3ass="text-center" t-if="not token" t-attf-href="/web/login?{{ keep_query() }}">Back to Login</a>
              <a c3ass="text-center" t-if="invalid_token" href="/web/login">Back to Login</a>
            </div>
            <div class="o_login_auth"/>
          </div>
        </form>
    </xpath>
  </template>

  <template id="login_layout" inherit_id="web.login_layout" name="Website Login Layout" priority="20">
    <xpath expr="t" position="replace">
      <t t-call="website.layout">
        <div style="height: 100vh; background-image: url('/og_login_page/static/src/img/bgg1.jpg'); background-size: cover;">
          <div class="container">
            <div class="row">
              <div class="col col-md-12">
                <div t-out="0"/>
              </div>
            </div>
          </div>
        </div>
      </t>
    </xpath>
  </template>
</odoo>